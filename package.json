{
  "name": "minutes-gen",
  "version": "0.7.1",
  "description": "MinutesGen v1.0 - AI-powered minutes generation from audio/video files",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite --port 3000 --strictPort",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:portable": "npm run build && electron-builder --win portable",
    "dist:corporate": "npm run build && electron-builder --win portable --config.compression=store",
    "dist:zip": "npm run build && electron-builder --win dir && cd dist-electron && powershell Compress-Archive -Path win-unpacked -DestinationPath MinutesGen-v0.7.1-portable.zip",
    "dist:signed": "npm run build && electron-builder --win --publish=never",
    "create-cert": "powershell -ExecutionPolicy Bypass -File scripts/create-certificate.ps1",
    "test:exe-mode": "npm run build && electron scripts/test-exe-mode.js",
    "test:static-paths": "node scripts/test-static-paths.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui"
  },
  "keywords": [
    "minutes",
    "transcription",
    "ai",
    "electron",
    "react",
    "typescript"
  ],
  "author": "MinutesGen Team",
  "license": "MIT",
  "devDependencies": {
    "@ffmpeg/core-mt": "^0.12.10",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jsdom": "^26.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@mui/icons-material": "^5.14.0",
    "@mui/lab": "^5.0.0-alpha.140",
    "@mui/material": "^5.14.0",
    "@mui/x-date-pickers": "^6.10.0",
    "axios": "^1.5.0",
    "chart.js": "^4.3.0",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.30.0",
    "docx": "^8.2.2",
    "electron-store": "^8.1.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^10.16.0",
    "html2canvas": "^1.4.1",
    "lodash": "^4.17.21",
    "mammoth": "^1.6.0",
    "marked": "^7.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.14.0",
    "recharts": "^2.8.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.minutesgen.app",
    "productName": "MinutesGen",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "MinutesGen-v${version}-${os}-${arch}.${ext}",
      "certificateFile": "MinutesGen-CodeSigning.p12",
      "certificatePassword": "MinutesGen2025",
      "verifyUpdateCodeSignature": false,
      "publisherName": "MinutesGen Team"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MinutesGen"
    }
  }
}
